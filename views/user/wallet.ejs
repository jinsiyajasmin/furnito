                    <main class="main">
                    <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
                        <div class="container">
                        <h1 class="page-title">Wallet</h1>
                        </div>
                    </div>
                    <div class="container wallet-container">
                        <div class="row balance-header">
                            <div class="col-md-6">
                                <h2>Wallet Balance</h2>
                                <% if(wallet[0]?.balance){%>
                                <h4>Current Balance: ₹ <%= wallet[0]?.balance %></h4><%}else{%><h4>Current Balance: ₹ 0</h4>
                                    <%}%>
                            </div>
                            <div class="col-md-6 text-end">
                                <!-- <button class="btn btn-primary me-2">Add Funds</button>
                                <button class="btn btn-secondary">Withdraw</button> -->
                            </div>
                        </div>
                
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <!-- <select class="form-select">
                                    <option selected>Transaction Type: Show All</option>
                                    <option>Deposit</option>
                                    <option>Withdrawal</option>
                                    <option>Purchase</option>
                                </select> -->
                            </div>
                            <div class="col-md-4">
                                <!-- <select class="form-select">
                                    <option selected>Date Range: Show All</option>
                                    <option>Last 7 days</option>
                                    <option>Last 30 days</option>
                                    <option>Last 90 days</option>
                                </select> -->
                            </div>
                            <div class="col-md-4">
                                <input type="text" class="form-control" placeholder="Search transactions">
                            </div>
                        </div>
                
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>TRANSACTION ID</th>
                                    <th>DATE</th>
                                    <th>DESCRIPTION</th>
                                    <th>AMOUNT</th>
                                   
                                    <th>TYPE</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% wallet?.forEach(item=>{ %>
                                    <% item.history.forEach(hist=>{ %>
                                <tr>
                                    <td><%=hist.transaction_id%></td>
                                    <td> <%= 
                                        new Date(hist.date.getTime() ).toLocaleDateString("en-US", {
                                          year: "numeric",
                                          month: "long",
                                          day: "numeric",
                                        }) 
                                      %></td>
                                    <td><%=hist.description%></td>
                                    <td><%=hist.amount%></td>
                                   <% if(hist.transaction_type == 'Cancelled')%>
                                    <td><span class="badge transaction-type-withdrawal">Credit</span></td>
                                </tr>
                                <%})%>
                               <%})%>
                            </tbody>
                        </table>
                    </div>
                
