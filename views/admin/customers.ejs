<div class="card">

<div class="card-datatable table-responsive">
  <table class="datatables-customers table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Name</th>
        <th class="text-nowrap">Email</th>
        <th>Phone No</th>
      
       
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i=0; i<data.length; i++) { %>
      <tr>
        <td><%=new Date(data[i].createdOn).toLocaleDateString()%></td>
        <td><%=data[i].name%></td>
        <td><%=data[i].email%></td>
        <td><%=data[i].phone || 'N/A'%></td>
       
        <td>
          <% if (data[i].isBlocked === false) { %>
            <button class="btn btn-danger" style="width: 80px;" onclick="confirmBlock('<%=data[i]._id%>', true)">
              Block
            </button>
          <% } else { %>
            <button class="btn btn-success" style="width: 80px;" onclick="confirmBlock('<%=data[i]._id%>', false)">
              Unblock
            </button>
          <% } %>
        </td>
      </tr>
      <% } %>
    </tbody>
    
  </table>
