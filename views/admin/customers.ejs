<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  function confirmBlock(customerId, isBlocking) {
      const action = isBlocking ? "block" : "unblock";
      const confirmationMessage = `Are you sure you want to ${action} this customer?`;
  
      Swal.fire({
          title: 'Confirm Action',
          text: confirmationMessage,
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: isBlocking ? '#d33' : '#28a745',
          cancelButtonColor: '#3085d6',
          confirmButtonText: isBlocking ? 'Yes, Block' : 'Yes, Unblock'
      }).then((result) => {
          if (result.isConfirmed) {
              // Redirect to the server-side route for blocking/unblocking
              window.location.href = `/admin/${isBlocking ? 'block' : 'unblock'}Customer?id=${customerId}`;
          }
      });
  }
  </script>

   
  
