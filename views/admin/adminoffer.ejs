                <script>

                  document.addEventListener('DOMContentLoaded', function () {
                    // Initialize Select2 for product selection
                    const productSelect = $('#productSelect');

                    // Destroy any existing Select2 instance first
                    if (productSelect.hasClass('select2-hidden-accessible')) {
                      productSelect.select2('destroy');
                    }

                    // Initialize Select2 with configuration
                    productSelect.select2({
                      placeholder: "Select products",
                      allowClear: true,
                      dropdownParent: $('#addOffer'),
                      width: '100%',
                      multiple: true,
                      closeOnSelect: false
                    }).on('select2:open', function () {
                      // Focus search field when dropdown opens
                      setTimeout(function () {
                        $('.select2-search__field').focus();
                      }, 0);
                    });

                    // Log selected values when they change
                    productSelect.on('change', function () {
                      console.log('Selected products:', $(this).val());
                    });

                    // Initialize Select2 for status selection
                    $('#offerStatus').select2({
                      placeholder: "Select status",
                      minimumResultsForSearch: Infinity,
                      dropdownParent: $('#addOffer'),
                      width: '100%'
                    });

                    // Reinitialize Select2 when modal is shown
                    $('#addOffer').on('shown.bs.modal', function () {
                      $('#productSelect').select2({
                        placeholder: "Select products",
                        allowClear: true,
                        dropdownParent: $('#addOffer'),
                        width: '100%'
                      });
                    });




                    // Form submission handler
                    const offerForm = document.getElementById('addNewOfferForm');
                    offerForm.addEventListener('submit', handleFormSubmit);

                    // Delete button handlers
                    initializeDeleteButtons();


                    // Validation and error handling functions
                    const setError = (element, message) => {
                      const formGroup = element.closest('.form-floating');
                      const errorDisplay = formGroup.querySelector('.errMsg');
                      if (errorDisplay) {
                        errorDisplay.innerText = message;
                        element.classList.add('is-invalid');
                        errorDisplay.classList.add('text-danger');
                      }
                    };

                    const setSuccess = (element) => {
                      const formGroup = element.closest('.form-floating');
                      const errorDisplay = formGroup.querySelector('.errMsg');
                      if (errorDisplay) {
                        errorDisplay.innerText = '';
                        element.classList.remove('is-invalid');
                        element.classList.add('is-valid');
                        errorDisplay.classList.remove('text-danger');
                      }
                    };

                    const validateForm = (formData) => {
                      let isValid = true;
                      const nameRegex = /^[a-zA-Z0-9\s]+$/;

                      // Title validation
                      if (!formData.title) {
                        setError(document.getElementById('offerTitle'), 'Enter Title');
                        isValid = false;
                      } else if (!nameRegex.test(formData.title)) {
                        setError(document.getElementById('offerTitle'), 'Title should only contain letters and numbers');
                        isValid = false;
                      } else if (formData.title.length < 3) {
                        setError(document.getElementById('offerTitle'), 'Title should be more than 2 letters');
                        isValid = false;
                      } else {
                        setSuccess(document.getElementById('offerTitle'));
                      }

                      // Description validation
                      if (!formData.description) {
                        setError(document.getElementById('offerDetails'), 'Enter Description');
                        isValid = false;
                      } else if (formData.description.length < 3) {
                        setError(document.getElementById('offerDetails'), 'Description should be more than 2 letters');
                        isValid = false;
                      } else {
                        setSuccess(document.getElementById('offerDetails'));
                      }

                      // Discount validation
                      const discount = Number(formData.discount);
                      if (!formData.discount) {
                        setError(document.getElementById('offerDiscount'), 'Enter Discount Amount');
                        isValid = false;
                      } else if (discount < 0) {
                        setError(document.getElementById('offerDiscount'), 'Discount should be more than 0');
                        isValid = false;
                      } else if (discount > 90) {
                        setError(document.getElementById('offerDiscount'), 'Discount should be less than 90');
                        isValid = false;
                      } else {
                        setSuccess(document.getElementById('offerDiscount'));
                      }

                      // Products validation
                      if (!formData.products || formData.products.length === 0) {
                        setError(document.getElementById('productSelect'), 'Please select at least one product');
                        isValid = false;
                      } else {
                        setSuccess(document.getElementById('productSelect'));
                      }

                      // Status validation
                      if (!formData.status) {
                        setError(document.getElementById('offerStatus'), 'Please select a status');
                        isValid = false;
                      } else {
                        setSuccess(document.getElementById('offerStatus'));
                      }

                      return isValid;
                    };

                    // Form submission handler
                    const handleFormSubmit = async (e) => {
                      e.preventDefault();

                      const formData = {
                        title: document.getElementById('offerTitle').value.trim(),
                        description: document.getElementById('offerDetails').value.trim(),
                        discount: document.getElementById('offerDiscount').value.trim(),
                        products: Array.from(document.getElementById('productSelect').selectedOptions).map(option => option.value),
                        status: document.getElementById('offerStatus').value,
                        type: 'PRODUCT'
                      };

                      if (!validateForm(formData)) {
                        return;
                      }

                      try {
                        const response = await fetch('/admin/offers/addOffers', {
                          method: 'POST',
                          headers: {
                            'Content-Type': 'application/json',
                          },
                          body: JSON.stringify(formData)
                        });

                        const data = await response.json();

                        if (data.success) {
                          Swal.fire({
                            title: 'Success!',
                            text: data.message,
                            icon: 'success',
                            confirmButtonText: 'OK'
                          }).then((result) => {
                            if (result.isConfirmed) {
                              window.location.reload();
                            }
                          });
                          $('#addOffer').modal('hide');
                        } else {
                          Swal.fire({
                            title: 'Error!',
                            text: data.message,
                            icon: 'error',
                            confirmButtonText: 'OK'
                          });
                        }
                      } catch (error) {
                        Swal.fire({
                          title: 'Error!',
                          text: 'An error occurred while saving the offer.',
                          icon: 'error',
                          confirmButtonText: 'OK'
                        });
                      }
                    };

                    // Delete functionality

                    document.addEventListener('DOMContentLoaded', function () {
                      const editOfferForms = document.querySelectorAll('.edit-offer-form');

                      // Initialize select2 on modal show for each modal
                      $('.editmodel').on('shown.bs.modal', function () {
                        const modalId = $(this).attr('id');
                        $(`#${modalId} .select2`).select2({
                          placeholder: "Select products",
                          allowClear: true,
                          dropdownParent: $(`#${modalId}`),
                          width: '100%'
                        });
                      });

                      editOfferForms.forEach(form => {
                        form.addEventListener('submit', async function (event) {
                          event.preventDefault();
                          const offerId = this.getAttribute('data-offer-id');

                          const offerTitle = document.getElementById(`offerTitle${offerId}`);
                          const offerDetails = document.getElementById(`offerDetails${offerId}`);
                          const offerDiscount = document.getElementById(`offerDiscount${offerId}`);
                          const productSelect = document.getElementById(`productSelect${offerId}`);
                          const offerStatus = document.getElementById(`offerStatus${offerId}`);
                          const edit_hidden = document.getElementById(`edit-hiddenid${offerId}`);

                          const selectedProducts = Array.from(productSelect.selectedOptions).map(option => option.value);

                          const isValid = validateForm(offerTitle, offerDetails, offerDiscount, selectedProducts, offerStatus);

                          if (!isValid) return;

                          try {
                            const response = await fetch('/admin/updateOffer', {
                              method: 'POST',
                              headers: {
                                'Content-Type': 'application/json',
                              },
                              body: JSON.stringify({
                                title: offerTitle.value.trim(),
                                description: offerDetails.value.trim(),
                                discount: offerDiscount.value.trim(),
                                products: selectedProducts,
                                status: offerStatus.value,
                                type: 'PRODUCT',
                                id: edit_hidden.value.trim()
                              })
                            });
                            const data = await response.json();
                            if (data.success) {
                              Swal.fire('Success!', data.message, 'success').then(() => {
                                window.location.href = data.redirectUrl;
                              });
                              $('.editmodel').modal('hide');
                            } else {
                              Swal.fire('Error!', data.message, 'error');
                            }
                          } catch (error) {
                            console.error('Error updating offer:', error);
                          }
                        });
                      });

                      const validateForm = (offerTitle, offerDetails, offerDiscount, selectedProducts, offerStatus) => {
                        let isValid = true;
                        const nameRegex = /^[a-zA-Z0-9\s]+$/;

                        if (!offerTitle.value.trim()) {
                          setError(offerTitle, 'Enter Title');
                          isValid = false;
                        } else if (!nameRegex.test(offerTitle.value.trim())) {
                          setError(offerTitle, 'Offer Name should only contain letters and numbers');
                          isValid = false;
                        } else {
                          setSuccess(offerTitle);
                        }

                        if (!offerDetails.value.trim()) {
                          setError(offerDetails, 'Enter Description');
                          isValid = false;
                        } else {
                          setSuccess(offerDetails);
                        }

                        if (!offerDiscount.value.trim() || offerDiscount.value <= 0 || offerDiscount.value > 90) {
                          setError(offerDiscount, 'Discount should be between 1 and 90');
                          isValid = false;
                        } else {
                          setSuccess(offerDiscount);
                        }

                        if (!selectedProducts.length) {
                          setError(productSelect, 'Select at least one product');
                          isValid = false;
                        } else {
                          setSuccess(productSelect);
                        }

                        if (!offerStatus.value) {
                          setError(offerStatus, 'Select Status');
                          isValid = false;
                        } else {
                          setSuccess(offerStatus);
                        }

                        return isValid;
                      };

                      const setError = (element, message) => {
                        element.classList.add('is-invalid');
                        const errorLabel = element.nextElementSibling;
                        errorLabel.textContent = message;
                      };

                      const setSuccess = (element) => {
                        element.classList.remove('is-invalid');
                      };
                    });



                    async function deleteOffer(offerId) {

                      const result = await Swal.fire({
                        title: 'Are you sure?',
                        text: "You won't be able to revert this!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Yes, delete it!'
                      });

                      if (result.isConfirmed) {
                        try {
                          const response = await fetch('/admin/deleteOffer', {
                            method: 'POST',
                            headers: {
                              'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({ id: offerId })
                          });

                          const data = await response.json();

                          if (data.success) {
                            Swal.fire(
                              'Deleted!',
                              'Your Offer has been deleted.',
                              'success'
                            ).then(() => {

                              location.reload();
                            });
                          } else {
                            Swal.fire(
                              'Error!',
                              data.message,
                              'error'
                            );
                          }
                        } catch (error) {
                          console.error('Error during Offer deletion:', error);
                          Swal.fire(
                            'Error!',
                            'An error occurred while deleting the Offer.',
                            'error'
                          );
                        }
                      }
                    }

                  });







